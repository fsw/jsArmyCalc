<?xml version="1.0" encoding="utf-8"?>
<ruleset xmlns="armycalc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="armycalc http://armycalc.com/xmls/twr3info.xsd" version="3.0">
  <uid>armycalc.twr3.test01</uid>
  <revision>1</revision>
  <name>Example TWR 3.0</name>
  <author>francio</author>
  <description>This is an example Ruleset. It shows the basic concepts of ArmyCalc.</description>
  <defaultArmyName>Army</defaultArmyName>
  <defaultArmySize>1500</defaultArmySize>
  <displayFields>
    <field>
      <name>dexterity</name>
      <default>3</default>
    </field>
    <field>
      <name>strength</name>
      <default>3</default>
    </field>
    <field>
      <name>agility</name>
      <default>3</default>
    </field>
    <field>
      <name>lives</name>
      <default>1</default>
    </field>
  </displayFields>
  <languages>
	<lang id="pl">
		<name>Polski</name>
	</lang>
	<lang id="en" default='true'>
		<name>English</name>
	</lang>
  </languages>
  <models>
  	<model id="m1">
		<name>Model 1</name>
	</model>
	<model id="m2" default='true'>
		<name>Default Model</name>
	</model>
  </models>
  <files>
    <units>
      <file>
        <name>Base Units</name>
        <path>units1.xml</path>
      </file>
      <file>
        <name>Extra Units For Model 2</name>
        <path>units2.xml</path>
	<models>
		<model>m2</model>
	</models>
	<menuname>Extra Units</menuname>
      </file>
    </units>
    <validators>
      <file>
        <name>Default Validator</name>
        <path>validator.lua</path>
      </file>
    </validators>
    <media>media</media>
    <icon>icon.png</icon>
  </files>
</ruleset>
