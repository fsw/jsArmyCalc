<?xml version="1.0" encoding="utf-8"?>
<elements xmlns="armycalc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="armycalc http://armycalc.com/xmls/twr3elements.xsd" version="3.0">
  
  <element minCount="1" maxCount="2" minSize="1" defaultSize="3" maxSize="20">
    
	<uid>warrior</uid>
    <name>Warrior</name>
    <description></description>
    
	<menu>Base Units</menu>
	
	<stats>
	  <stat id="str">5</stat>
	  <stat id="sta">5</stat>
	  <stat id="spe">5</stat>
	  <stat id="hp">10</stat>
	</stats>

	<cost id="pts">10</cost>
	<cost id="gc">1</cost>
	
    <thumbnail src="media/warrior.jpg"></thumbnail>

	<elements>
		<element minCont="0" maxCount="1" minSize="1" maxSize="1"
			afterCountChange = "this.parent.childCount('chieftains_squire',this.count());">
		  <uid>chieftain</uid>
		  <name>Chieftain</name>
		  <stats>
			<stat id="str">6</stat>
			<stat id="sta">6</stat>
			<stat id="spe">6</stat>
			<stat id="hp">10</stat>
		  </stats>
		
		  <elements>
			<element minCont="0" maxCount="1" minSize="1" maxSize="1" visible="false">
			  <uid>chieftains_squire</uid>
			  <name>Chieftain's squire</name>
			  <stats>
				<stat id="str">1</stat>
				<stat id="sta">1</stat>
				<stat id="spe">1</stat>
				<stat id="hp">1</stat>
			  </stats>
			</element>
		  </elements>

		</element>

		<element minCont="0" maxCount="1" resizable="false" 
			  afterCountChange = "this.parent.stat('sta',this.parent.stat('sta')+this.count()); 
							  this.parent.available['two_handed_weapons'].enabled(!this.count());"
			  beforeCostRecalc = "this.size(this.parent.size());">
		  <uid>shields</uid>
		  <name>Shields</name>
		  <cost id="pts">1</cost>
		</element>
		
		<element minCont="0" maxCount="1" resizable="false" 
			  afterCountChange = "this.parent.stat('str',this.parent.stat('str')+this.count()); 
							  this.parent.available['shields'].enabled(!this.count());"
			  beforeCostRecalc = "this.size(this.parent.size());">
		  <uid>two_handed_weapons</uid>
		  <name>Two handed weapons</name>
		  <cost id="pts">1</cost>
		</element>

		<element minCont="0" maxCount="1" minSize="1" maxSize="3">
		  <uid>magic_standard</uid>
		  <name>Magic Standard</name>
		  <description></description>
		</element>
	</elements>

  </element>
  
  <element minCount="1" maxCount="2" minSize="1" defaultSize="3" maxSize="20">
    
	<uid>peon</uid>
    <name>Peon</name>
    <description></description>
    
	<menu>Base Units</menu>
	
	<stats>
	  <stat id="str">2</stat>
	  <stat id="sta">2</stat>
	  <stat id="spe">2</stat>
	  <stat id="hp">4</stat>
	</stats>

	<cost id="pts">1</cost>
	<cost id="gc">0</cost>
	
    <thumbnail src="media/peon.jpg"></thumbnail>

  </element>

</elements>
